			<outputDirectory>/lib</outputDirectory>
			<includes>
				<include>org.eclipse.jetty:*</include>
				<include>javax.servlet:javax.servlet-api</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>/lib/teapotech</outputDirectory>
			<includes>
				<include>org.slf4j:slf4j-api</include>
				<include>ch.qos.logback:*</include>
				<include>commons-lang:*</include>
				<include>commons-logging:*</include>
				<include>javax.validation:*</include>
				<!-- 
				<include>dom4j:*</include>
				<include>antlr:*</include>
				<include>xml-apis:*</include>
				<include>org.hibernate:*</include>
				<include>org.hibernate.common:*</include>
				<include>com.fasterxml:*</include>
				<include>org.hibernate.javax.persistence:*</include>
				<include>org.jboss.logging:*</include>
				<include>org.jboss.spec.javax.transaction:*</include>
				<include>org.javassist:*</include>
				<include>org.springframework:*</include>
				<include>org.springframework.security:*</include>
				<include>org.codehaus.jackson:*</include>
				<include>aopalliance:*</include>
				<include>com.jolbox:*</include>
				<include>com.google.guava:*</include>
				<include>postgresql:*</include>-->
			</includes>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<directory>components/container</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>bin/</include>
				<include>conf/</include>
				<include>logs/</include>
				<include>webapps/</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>components/framework/target</directory>
			<outputDirectory>/webapps</outputDirectory>
			<includes>
				<include>*.war</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>components/framework/conf</directory>
			<outputDirectory>/conf</outputDirectory>
			<includes>
				<include>*.*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>components/bootstrap/target</directory>
			<outputDirectory>/lib/teapotech</outputDirectory>
			<includes>
				<include>teapotech-bootstrap.jar</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>components/utils/target</directory>
			<outputDirectory>/lib/teapotech</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>
	</fileSets>
